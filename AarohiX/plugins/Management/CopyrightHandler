from pyrogram import Client, filters
from AarohiX import app
from pyrogram.types import Message

# -----------------------------------------------------

@app.on_edited_message(filters.group & ~filters.me)
async def delete_edited_messages(client, edited_message):
    await edited_message.delete()


# -------------------------------

async def delete_pdf_files(client, message):
    if message.document and message.document.mime_type == "application/pdf":
        warning_message = f"@{message.from_user.username}  Ê™Êœá´€Éª Êá´€á´€Ê€  á´˜á´…Ò“ Ê™Êœá´‡á´Š á´‹á´‡,\n Ê™Êœá´€Éª á´„á´á´˜ÊÊ€ÉªÉ¢Êœá´› ÊŸá´€É¢Êá´‡É¢á´€ \n\n á´…á´‡ÊŸá´‡á´›á´‡ á´‹á´€Ê€ á´…ÉªÊá´€ Ê™Êœá´€Éª.\n\n á´€Ê™ || @LuckyRaja0 || Ê™Êœá´€Éª á´‹á´‡ á´…á´ á´á´‡ Ê™Êœá´‡á´Š á´…á´‡ ğŸŒğŸŒğŸŒ."
        await message.reply_text(warning_message)
        await message.delete()
    else:  
        pass

@app.on_message(filters.group & filters.document)
async def message_handler(client, message):
    await delete_pdf_files(client, message)
